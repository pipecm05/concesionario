<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="357.0" prefWidth="239.0" spacing="20" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaz.controllers.MenuPrincipalController">

    <!-- Etiquetas de usuario y rol -->
    <Label fx:id="usuarioLabel" style="-fx-font-size: 16px;" text="Usuario: Juan Pérez" />
    <Label fx:id="rolLabel" style="-fx-font-size: 16px;" text="Cedula: Administrador" />

    <!-- Botones de acciones -->
    <Button fx:id="comprarButton" onAction="#handleComprar" style="-fx-font-size: 14px;" text="Comprar" />
    <Button fx:id="venderButton" onAction="#handleVender" style="-fx-font-size: 14px;" text="Vender" />
    <Button fx:id="alquilarButton" onAction="#handleAlquilar" style="-fx-font-size: 14px;" text="Alquilar" />
    <Button fx:id="mostrarButton" onAction="#handleMostrar" style="-fx-font-size: 14px;" text="Mostrar Vehículo" />
   <Button fx:id="cerrar" onAction="#cerrar" style="-fx-font-size: 14px;" text="Cerrar Sesion" />

    <!-- Espaciado interno del VBox -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
